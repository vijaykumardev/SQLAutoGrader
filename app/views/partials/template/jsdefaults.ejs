<script>
    function displayQuestions() {
      $(".questions").hide();
      var assignNo = $("#assignment-dropdown").val()
      var questNo = $( "#question-dropdown-"+Number(assignNo) ).val();
      console.log("changedQuest:"+questNo);
      $("#selected-question").text("Question "+(Number(questNo)+1));
      $( "#assignment-"+assignNo+"-question-"+questNo ).show();
    }
    function displayAssignment(){
      $(".questions-dropdown").hide()
      var no = $("#assignment-dropdown").val();
      console.log("changedAssign:"+no);
      $("#selected-assignment").text("Assignment "+(Number(no)+1));
      $("#question-dropdown-"+no).show();
      displayQuestions();
    }
    //var $preAssign = $("#assignment-dropdown").val();
    //var $preQuest = $( "#question-dropdown-"+Number($preAssign) ).val();

    //displayAssignment();
    //displayQuestions();

    $( "#assignment-dropdown").change(displayAssignment());
    $( ".questions-dropdown" ).change(displayQuestions());
</script>
